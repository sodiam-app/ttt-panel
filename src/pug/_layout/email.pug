- var ajax = false
- var page = true
doctype html
include ../_partials/banner.pug

html(lang='en')
  head
    base(href=base)
    include ../_partials/head.pug
    block styles
  body
    include ../_partials/email/sidebar.pug
    include ../_partials/aside.pug
    .wrapper.d-flex.flex-column.min-vh-100.bg-light(class='dark:bg-transparent')
      include ../_partials/header.pug
      .body.flex-grow-1.px-3
        .container-lg
          block view
      include ../_partials/footer.pug
    include ../_partials/scripts.pug
