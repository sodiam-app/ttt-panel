              .col-lg-5
                div(data-coreui-input-read-only='true' data-coreui-locale='en-US' data-coreui-toggle='date-range-picker')
    .col-12
      .card.mb-4
        .card-header
          strong Date Range Picker
          span.small.ms-1 Disabled dates
        .card-body
          +example('https://coreui.io/docs/forms/date-range-picker/#disabled-dates')
            .row
              .col-lg-5
                #myDateRangePickerDisabledDates
    .col-12
      .card.mb-4
        .card-header
          strong Date Range Picker
          span.small.ms-1 Custom ranges
        .card-body
          +example('https://coreui.io/docs/forms/date-range-picker/#custom-ranges')
            .row
              .col-lg-5
                #myDateRangePickerCustomRanges

block js
  | var options = {
  | locale: 'en-US',
  | calendarDate: new Date(2022, 2, 1),
  | disabledDates: [
  | [new Date(2022, 2, 4), new Date(2022, 2, 7)],
  | new Date(2022, 2, 16),
  | new Date(2022, 3, 16),
  | [new Date(2022, 4, 2), new Date(2022, 4, 8)]
  | ],
  | maxDate: new Date(2022, 5, 0),
  | minDate: new Date(2022, 1, 1)
  | }
  | var myDateRangePickerDisabledDates = new coreui.DateRangePicker(document.getElementById('myDateRangePickerDisabledDates'), options)
  |
  | var optionsCustomRanges = {
  | locale: 'en-US',
  | ranges: {
  | Today: [new Date(), new Date()],
  | Yesterday: [
  | new Date(new Date().setDate(new Date().getDate() - 1)),
  | new Date(new Date().setDate(new Date().getDate() - 1)),
  | ],
  | 'Last 7 Days': [
  | new Date(new Date().setDate(new Date().getDate() - 6)),
  | new Date(new Date()),
  | ],
  | 'Last 30 Days': [
  | new Date(new Date().setDate(new Date().getDate() - 29)),
  | new Date(new Date()),
  | ],
  | 'This Month': [
  | new Date(new Date().setDate(1)),
  | new Date(new Date().getFullYear(), new Date().getMonth() + 1, 0),
  | ],
  | 'Last Month': [
  | new Date(new Date().getFullYear(), new Date().getMonth() - 1, 1),
  | new Date(new Date().getFullYear(), new Date().getMonth(), 0),
  | ]
  | }
  | }
  | var myDateRangePickerCustomRanges = new coreui.DateRangePicker(document.getElementById('myDateRangePickerCustomRanges'), optionsCustomRanges)


