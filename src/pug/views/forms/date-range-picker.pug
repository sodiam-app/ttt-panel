          +example('https://coreui.io/docs/forms/date-range-picker/#disabled')
            .row
              .col-lg-5
                div(data-coreui-disabled='true' data-coreui-locale='en-US' data-coreui-toggle='date-range-picker')
    .col-12
      .card.mb-4
        .card-header
          strong Date Range Picker
          span.small.ms-1 Readonly
